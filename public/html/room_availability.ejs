<!-- room_availability.ejs -->

<!DOCTYPE html>
<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Press+Start+2P&display=swap" rel="stylesheet">
    <title>Room Availability</title>

   
    <!-- Add your CSS and other head content here -->
    <style>
            .navbar {
        position: fixed;
        top: 0;
        right: 0;
         /* Adjust the background color as needed */
        padding: 10px;
        z-index: 1000; /* Ensure the navbar is above other elements */
    }

    .navbar a {
        color: rgb(106, 81, 81);
        font-family: fantasy ; /* Adjust the text color as needed */
        text-decoration: none;
        font-size: 18px;
        margin-right: 5px; /* Adjust the margin to shorten the gap */
    }

    
      
        
        /* Your CSS styles here */
        body {
            font-family: Arial, sans-serif;
            margin: 0; /* Remove default margin */
            padding: 0; /* Remove default padding */
            background-image: url('/public/images/Admin_Home.jpg');
            background-size: cover;
            background-position: center;
        }
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: rgba(255, 255, 255, 0.8); 

        }
        .room {
            display: flex;
            align-items: center;
            width: 50%;
            padding: 20px;
            border: 1px solid #ddd;
            margin: 10px;
           
        }
        .room-image {
            width: 200px;
            margin-right: 20px;
            background-color: #333;
            color: #fff;
            transition: transform 0.3s ease-in-out;
           
        }
        .room-image:hover {
        transform: scale(1.2);
      }
      
        .room-description {
            flex-grow: 1;
            opacity: 0.8;
        }
        
    

.room-description span{
    font-size: 20px;
    font-weight: 900;
    color: var(--yellow);
}
        .form-item {
            font-size: 18px;
                font-weight: bold;
                text-decoration: none;
                padding: 15px 30px;
                border-radius: 8px;
                background-color: #4CAF50;
                color: black;
                border: 2px solid #4CAF50;
                transition: all 0.3s ease;
                cursor: pointer;
                margin-right: 20px;
                transition: transform 0.3s ease-in-out;
        }
        .form-item:hover {
            transform: scale(1.2);
        }
        .room-status {
    font-weight: bold;
    font-family: 'Poppins', sans-serif;
    font-size: large;
}

.available {
    color: green;
    font-family: 'Poppins', sans-serif; /* You can adjust this font-family as needed */
    font-size: large;
}

        .not-available {
            color: red;
        }
        #btn {
            text-align: center;
            margin: 20px;
        }
        .logo {
        width: 18px; /* Set the width to match the "Home" link */
        height: 18px; /* Set the height to match the "Home" link */
        margin-right: 10px; /* Adjust the margin as needed */
    }
    </style>
    <link rel="stylesheet" type="text/css" href="/public/css/styles.css">
</head>
<body>
    <div class="navbar">
        <a href="/">Home</a>
        <img src="/public/images/menu.png" alt="Menu Logo" class="logo">
    </div>
    
    <div class="container">
        <h1>Our Rooms</h1>

        <div class="room">
            <!-- Room 1 -->
            <img class="room-image" src="/public/images/boutique1.jpg" alt="Room 1">
            <div class="room-description">
                <h2>BOUTIQUE Room</h2>
                <p>Chick room with semi double bed</p>
                <p >
                    <span>BDT <%= prices[0] %>/</span> Per Night
                </p>
                <p class="room-status available">#  available rooms: <%= available[0] %></p>
            </div>
        </div>

        <div class="room">
            <img class="room-image" src="/public/images/executive_double1.jpg" alt="Room 2">
            <div class="room-description">
                <h2>EXECUTIVE DOUBLE</h2>
                <p>Standard room with double bed</p>
                <p >
                    <span>BDT <%= prices[1] %>/</span> Per Night
                </p>
                <p class="room-status available">#  available rooms: <%= available[1] %></p>
                
            </div>
        </div>

        <div class="room">
            <img class="room-image" src="/public/images/family_suite1.jpg" alt="Room 3">
            <div class="room-description">
                <h2>FAMILY SUITE</h2>
                <p>Spacious room with two king sized double bed</p>
                <p >
                    <span>BDT <%= prices[2] %>/</span> Per Night
                </p>
                <p class="room-status available">#  available rooms: <%= available[2] %></p>
                
            </div>
        </div>

        <div class="room">
            <img class="room-image" src="/public/images/executive_twin1.jpg" alt="Room 4">
            <div class="room-description">
                <h2>EXECUTIVE TWIN</h2>
                <p>Standard room with two single bed</p>
                <p >
                    <span>BDT <%= prices[3] %>/</span> Per Night
                </p>
                <p class="room-status available">#  available rooms: <%= available[3] %></p>
                
            </div>
        </div>

        <div class="room">
            <img class="room-image" src="/public/images/premier_twin1.jpg" alt="Room 5">
            <div class="room-description">
                <h2>PREMIER TWIN</h2>
                <p>Spacious room with two double bed</p>
                <p >
                    <span>BDT <%= prices[4] %>/</span> Per Night
                </p>
                <p class="room-status available">#  available rooms: <%= available[4] %></p>
                
            </div>
        </div>

        <div class="room">
            <img class="room-image" src="/public/images/grand_suite.jpg" alt="Room 6">
            <div class="room-description">
                <h2>GRAND SUITE</h2>
                <p>Luxury suite room with neoclassical king bed</p>
                <p >
                    <span>BDT <%= prices[5] %>/</span> Per Night
                </p>
                <p class="room-status available">#  available rooms: <%= available[5] %></p>
                
            </div>
        </div>

        <!-- Room 2 and other rooms with similar structure -->

        <div class="form-item">
            <a href="/book" class="btn">Book Now</a>
        </div>
    </div>
</body>
</html>
