<!-- room_availability.ejs -->

<!DOCTYPE html>
<html>
<head>
    <title>Room Availability</title>
    <!-- Add your CSS and other head content here -->
    <style>
        /* Your CSS styles here */
        body {
            font-family: Arial, sans-serif;
            margin: 0; /* Remove default margin */
            padding: 0; /* Remove default padding */
            background-image: url('/public/images/family_suite1.jpg');
            background-size: cover;
            background-position: center;
        }
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: rgba(255, 255, 255, 0.8); 

        }
        .room {
            display: flex;
            align-items: center;
            width: 50%;
            padding: 20px;
            border: 1px solid #ddd;
            margin: 10px;
        }
        .room-image {
            width: 200px;
            margin-right: 20px;
        }
        .room-description {
            flex-grow: 1;
        }
        .form-item {
            background-color: #007BFF;
            color: #fff;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .form-item:hover {
            background-color: #0056b3;
        }
        .room-status {
            font-weight: bold;
        }
        .available {
            color: green;
        }
        .not-available {
            color: red;
        }
        #btn {
            text-align: center;
            margin: 20px;
        }
    </style>
    <link rel="stylesheet" type="text/css" href="/public/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Select Your Room</h1>

        <div class="room">
            <!-- Room 1 -->
            <img class="room-image" src="/public/images/family_suite1.jpg" alt="Room 1">
            <div class="room-description">
                <h2>BOUTIQUE Room</h2>
                <p>Chick room with semi double bed</p>
                <p >
                    <span>BDT 3,150.000/</span> Per Night
                </p>
                <p class="room-status available"># of available rooms: <%= available[0] %></p>
            </div>
        </div>

        <div class="room">
            <img class="room-image" src="/public/images/family_suite1.jpg" alt="Room 2">
            <div class="room-description">
                <h2>EXECUTIVE DOUBLE</h2>
                <p>Standard room with double bed</p>
                <p >
                    <span>BDT 4,200.000/</span> Per Night
                </p>
                <p class="room-status available"># of available rooms: <%= available[1] %></p>
                
            </div>
        </div>

        <div class="room">
            <img class="room-image" src="/public/images/family_suite1.jpg" alt="Room 3">
            <div class="room-description">
                <h2>FAMILY SUITE</h2>
                <p>Spacious room with two king sized double bed</p>
                <p >
                    <span>BDT 7,000.000/</span> Per Night
                </p>
                <p class="room-status available"># of available rooms: <%= available[2] %></p>
                
            </div>
        </div>

        <div class="room">
            <img class="room-image" src="/public/images/family_suite1.jpg" alt="Room 4">
            <div class="room-description">
                <h2>EXECUTIVE TWIN</h2>
                <p>Standard room with two single bed</p>
                <p >
                    <span>BDT 6,200.000/</span> Per Night
                </p>
                <p class="room-status available"># of available rooms: <%= available[3] %></p>
                
            </div>
        </div>

        <div class="room">
            <img class="room-image" src="/public/images/family_suite1.jpg" alt="Room 5">
            <div class="room-description">
                <h2>PREMIER TWIN</h2>
                <p>Spacious room with two double bed</p>
                <p >
                    <span>BDT 8,500.000/</span> Per Night
                </p>
                <p class="room-status available"># of available rooms: <%= available[4] %></p>
                
            </div>
        </div>

        <div class="room">
            <img class="room-image" src="/public/images/family_suite1.jpg" alt="Room 6">
            <div class="room-description">
                <h2>GRAND SUITE</h2>
                <p>Luxury suite room with neoclassical king bed</p>
                <p >
                    <span>BDT 18,000.000/</span> Per Night
                </p>
                <p class="room-status available"># of available rooms: <%= available[5] %></p>
                
            </div>
        </div>

        <!-- Room 2 and other rooms with similar structure -->

        <div class="form-item">
            <a href="/book" class="btn">Book Now</a>
        </div>
    </div>
</body>
</html>
