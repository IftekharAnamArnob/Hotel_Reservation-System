<body>
    <div class="container">
        <h1>Hotel Reservation Requests</h1>
        <table id="reservationTable">
            <tr>
                <th>Booking ID</th>

                <th>Guest ID</th>
                <th>Check-in Date</th>
                <th>Check-out Date</th>
                <th>Status</th>
                <th>Total Guests</th>
                <th>Room type</th>
                <th>Action</th>
            </tr>


            <% rooms.forEach(data=> { %>
                <tr>
                    <td>
                        <%= data.reservation_id %>
                    </td>
                    <td>
                        <a href="/guest_detail/<%= data.guest_id %>" method="get">
                            <%= data.guest_id %>
                        </a>
                    </td>
                    
                    <td>
                        <%= data.check_in_date.toLocaleDateString() %>
                    </td>
                    <td>
                        <%= data.check_out_date.toLocaleDateString() %>
                    </td>
                    <td>
                        <%= data.reservation_status %>
                    </td>
                    <td>
                        <%= data.total_guests %>
                    </td>
                    <td>
                        <%= data.room_type_name %>
                    </td>
                    <td class="action-buttons">
                        <button class="approve-button" data-id="<%= data.reservation_id %>" data-status="pending"
                            onclick="approveBooking(<%= data.reservation_id %>)">Approve</button>
                        <button class="reject-button" data-id="<%= data.reservation_id %>" data-status="pending"
                            onclick="rejectBooking(<%= data.reservation_id %>)">Reject</button>

                    </td>
                </tr>
                <% }); %>

        </table>

        <div class="action-buttons">

            <button id="confirmButton" onclick="confirmAction()">Confirm</button>
        </div>
    </div>


    <script>

        document.addEventListener('DOMContentLoaded', function () {

            fetch('/rooms')
                .then(response => response.json())
                .then(reservationData => {
                    const table = document.getElementById('reservationTable');


                    reservationData.forEach(data => {
                        const row = table.insertRow();
                        row.innerHTML = `
                    <td>${data.reservation_id}</td>
                    <td>${data.guest_id}</td>
                    <td>${data.check_in_date}</td>
                    <td>${data.check_out_date}</td>
                    <td>${data.reservation_status}</td>
                    <td>${data.total_guests}</td>
                    <td>${data.room_type_name}</td>
                    <td class="action-buttons">
                        <button class="approve-button" data-id="${data.reservation_id}" onclick="approveBooking(${data.reservation_id})">Approve</button>
                        <button class="reject-button" data-id="${data.reservation_id}" onclick="rejectBooking(${data.reservation_id})">Reject</button>
                    </td>
                `;
                    });
                })
                .catch(error => {
                    console.error('Error fetching data:', error);
                });
        });


        function approveBooking(bookingId) {
            const approveButton = document.querySelector(`.approve-button[data-id="${bookingId}"]`);
            approveButton.dataset.status = "approved";
            approveButton.classList.add('checked');
            approveButton.disabled = true;
        }

        function rejectBooking(bookingId) {
            const rejectButton = document.querySelector(`.reject-button[data-id="${bookingId}"]`);
            rejectButton.dataset.status = "rejected";
            rejectButton.classList.add('checked');
            rejectButton.disabled = true;
        }

        function confirmAction() {
    const approvedBookings = Array.from(document.querySelectorAll('.approve-button[data-status="approved"]')).map(btn => btn.dataset.id);
    const rejectedBookings = Array.from(document.querySelectorAll('.reject-button[data-status="rejected"]')).map(btn => btn.dataset.id);

    // Now you can send the approvedBookings and rejectedBookings data to your server via a fetch or another AJAX call.

    // Example using fetch:
    fetch('/updateBookings', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ approved: approvedBookings, rejected: rejectedBookings }),
    })
    .then(response => response.json())
    .then(data => {
        console.log('Success:', data);
        window.location.href = "/confirm_decision";
    })
    .catch((error) => {
        console.error('Error:', error);
    });
}

    </script>

